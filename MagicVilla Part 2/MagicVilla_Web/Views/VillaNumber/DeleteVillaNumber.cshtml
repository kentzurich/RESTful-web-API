@model VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <input hidden asp-for="VillaNumber.VillaNo" />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />

        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label p-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" readonly class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaID" class="control-label p-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" disabled class="form-control" asp-items="@Model.VillaList">
                    <option>--Select villa--</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label p-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" readonly class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>